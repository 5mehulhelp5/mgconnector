<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="Remarkety\Mgconnector\Block\Frontend\Tracking\Category" name="remarkety.tracking.category" template="category.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="remarkety.tracking.addToCart" template="Remarkety_Mgconnector::event/addToCart.phtml">
                <arguments>
                    <argument name="add_to_cart_event_view_model" xsi:type="object">Remarkety\Mgconnector\ViewModel\AddToCartEventViewModel</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
